<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/mobile_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.shelter.ui.home.HomeFragment"
        android:label="@string/app_name" />
    <fragment
        android:id="@+id/animalTypesFragment"
        android:name="com.example.shelter.ui.animals.AnimalTypesFragment"
        android:label="@string/animals_label" >
        <action
            android:id="@+id/navigate_to_animals"
            app:destination="@id/animalsFragment" />
    </fragment>
    <fragment
        android:id="@+id/contactFragment"
        android:name="com.example.shelter.ui.contact.ContactFragment"
        android:label="@string/contact_label" />
    <fragment
        android:id="@+id/newsFragment"
        android:name="com.example.shelter.NewsFragment"
        android:label="@string/news_label" />
</navigation>