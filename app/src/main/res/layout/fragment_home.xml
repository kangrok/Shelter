<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:paddingVertical="@dimen/margin_large">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:text="@string/visiting_times"
            android:textColor="@color/primary"
            android:textSize="18sp"
            android:layout_marginStart="@dimen/margin_large"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_large"
            app:cardCornerRadius="@dimen/corner_radius_standard"
            android:layout_marginStart="33dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <TextView
                    android:id="@+id/visit_time_tue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/tue_fri"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_toEndOf="@+id/visit_time_tue"
                    android:text="@string/visit_time_tue_fri" />

                <TextView
                    android:id="@+id/visit_time_sat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/visit_time_tue"
                    android:text="@string/sat"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/visit_time_tue"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_toEndOf="@+id/visit_time_sat"
                    android:text="@string/visit_time_sat" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_call"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/visit_time_sat"
                    android:layout_marginTop="12dp"
                    android:text="@string/phone_number_visit"
                    app:cornerRadius="@dimen/corner_radius_standard"
                    style="@style/call_button"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:text="@string/animals_label"
            android:textColor="@color/primary"
            android:textSize="18sp"
            android:layout_marginStart="@dimen/margin_large"/>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:scrollbars="none">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="200dp">

                <fragment
                    android:id="@+id/fragment_container_home"
                    android:name="com.example.shelter.ui.animals.AnimalTypesFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:layout="@layout/fragment_animal_types_land" />
            </FrameLayout>
        </HorizontalScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_small"
            android:text="@string/reception_of_animals"
            android:textColor="@color/primary"
            android:textSize="18sp"
            android:layout_marginStart="@dimen/margin_large"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_large"
            android:layout_marginBottom="2dp"
            app:cardCornerRadius="@dimen/corner_radius_standard"
            android:layout_marginStart="33dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <TextView
                    android:id="@+id/reception_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mon_fri"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_toEndOf="@+id/reception_time"
                    android:text="@string/reception_time" />

                <TextView
                    android:id="@+id/reception_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/reception_time"
                    android:text="@string/reception_info" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_call_reception"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/reception_info"
                    android:layout_marginTop="12dp"
                    android:text="@string/phone_number_visit"
                    app:cornerRadius="@dimen/corner_radius_standard"
                    style="@style/call_button" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
