<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageview_article"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignBottom="@+id/imageview_article"
                android:src="@drawable/bottom_shadow" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignBottom="@+id/imageview_article"
                android:src="@drawable/bottom_shadow" />

            <TextView
                android:id="@+id/textview_article_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="160dp"
                android:layout_marginRight="24dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textview_article_title"
                android:layout_marginTop="233dp"
                android:layout_marginRight="@dimen/margin_medium">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="0dp"
                    app:cardCornerRadius="25dp">

                    <ImageView
                        android:id="@+id/imageview_author"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textview_author"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_toEndOf="@id/cardview_author"/>

                <TextView
                    android:id="@+id/textview_article_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_small"
                    android:paddingBottom="2dp"
                    android:textColor="#cccccc"
                    android:layout_toEndOf="@id/cardview_author"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/textview_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageview_article"
                android:layout_alignStart="@+id/textview_article_title"
                android:layout_alignEnd="@+id/textview_article_title"
                android:layout_marginTop="@dimen/margin_large"
                android:textColor="@color/text_main"/>

            <TextView
                android:id="@+id/textview_article_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_summary"
                android:layout_marginTop="24dp"
                android:layout_alignStart="@+id/textview_summary"
                android:layout_alignEnd="@+id/textview_summary" />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>