<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageview_article"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignBottom="@+id/imageview_article"
                android:src="@drawable/bottom_shadow" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignBottom="@+id/imageview_article"
                android:src="@drawable/bottom_shadow" />

            <TextView
                android:id="@+id/textview_article_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="160dp"
                android:layout_marginRight="24dp"
                android:text="Title"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textview_article_title"
                android:layout_marginTop="233dp"
                android:layout_marginRight="16dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="0dp"
                    app:cardCornerRadius="25dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/imageview_author"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        tools:srcCompat="@tools:sample/avatars" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textview_author"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginStart="8dp"
                    android:text="Author Name"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/cardview_author"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/textview_article_date"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:text="Publish date"
                    android:textColor="#cccccc"
                    app:layout_constraintLeft_toRightOf="@+id/cardview_author"
                    app:layout_constraintTop_toBottomOf="@+id/textview_author" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textview_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageview_article"
                android:layout_alignStart="@+id/textview_article_title"
                android:layout_alignEnd="@+id/textview_article_title"
                android:layout_marginTop="32dp"
                android:text="TextView"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/textview_article_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_summary"
                android:layout_marginTop="24dp"
                android:layout_alignStart="@+id/textview_summary"
                android:layout_alignEnd="@+id/textview_summary"
                android:text="TextView" />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>